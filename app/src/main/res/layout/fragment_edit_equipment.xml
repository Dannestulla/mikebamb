<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.fragment.AddEquipmentFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingBottom="70dp">

        <TextView
            android:id="@+id/equip_name"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/equipment_number" />

        <EditText
            android:id="@+id/edit_equip_name"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/manufacturer"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_equip_name"
            android:padding="8dp"
            android:text="@string/manufacturer" />

        <EditText
            android:id="@+id/edit_manufacturer"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_equip_name"
            android:layout_toEndOf="@+id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/model"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_manufacturer"
            android:padding="8dp"
            android:text="@string/model" />

        <EditText
            android:id="@+id/edit_model"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_manufacturer"
            android:layout_toEndOf="@+id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/serial_number"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_model"
            android:padding="8dp"
            android:text="@string/serial_number" />

        <EditText
            android:id="@+id/edit_part_number"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_model"
            android:layout_toEndOf="@+id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/install_date"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_part_number"
            android:padding="8dp"
            android:text="@string/install_date" />

        <EditText
            android:id="@+id/edit_install_date"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_part_number"
            android:layout_toEndOf="@+id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/fluig"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_install_date"
            android:text="@string/fluig"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/edit_fluig"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_install_date"
            android:layout_toEndOf="@+id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/manuallink"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_fluig"
            android:padding="8dp"
            android:text="@string/link_to_manual" />

        <EditText
            android:id="@+id/edit_manuallink"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_fluig"
            android:layout_toEndOf="@+id/manuallink"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/hours"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_manuallink"
            android:padding="8dp"
            android:text="@string/hours" />

        <EditText
            android:id="@+id/edit_hours"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_manuallink"
            android:layout_toEndOf="@+id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/qr_code"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_hours"
            android:padding="8dp"
            android:text="@string/qrcode" />

        <EditText
            android:id="@+id/edit_qr_code"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_hours"
            android:layout_toEndOf="@+id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/comments"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_qr_code"
            android:padding="8dp"
            android:text="@string/comments" />

        <EditText
            android:id="@+id/edit_comments"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_qr_code"
            android:layout_toEndOf="@+id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/category1"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_comments"
            android:padding="8dp"
            android:text="Category1" />
        <EditText
            android:id="@+id/edit_category1"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_comments"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/category2"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_category1"
            android:padding="8dp"
            android:text="Category2" />
        <EditText
            android:id="@+id/edit_category2"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_category1"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/category3"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_category2"
            android:padding="8dp"
            android:text="Category3" />
        <EditText
            android:id="@+id/edit_category3"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_category2"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/observation1"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_category3"
            android:padding="8dp"
            android:text="Observations" />
        <EditText
            android:id="@+id/edit_observations1"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_category3"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/observation2"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_observations1"
            android:padding="8dp"
            android:text="Observations2" />
        <EditText
            android:id="@+id/edit_observations2"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_observations1"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/observation3"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_observations2"
            android:padding="8dp"
            android:text="Observations3" />

        <EditText
            android:id="@+id/edit_observations3"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_observations2"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/observation4"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_observations3"
            android:padding="8dp"
            android:text="Observations4" />
        <EditText
            android:id="@+id/edit_observations4"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_observations3"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/observation5"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_observations4"
            android:padding="8dp"
            android:text="Observations4" />
        <EditText
            android:id="@+id/edit_observations5"
            style="@style/NormalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_observations4"
            android:layout_toEndOf="@id/equip_name"
            android:ems="10"
            android:inputType="textPersonName" />


        <Button
            android:id="@+id/addequipment"
            style="@style/Button"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/observation5"
            android:layout_centerHorizontal="true"
            android:text="@string/add_equipment" />
    </RelativeLayout>
</ScrollView>