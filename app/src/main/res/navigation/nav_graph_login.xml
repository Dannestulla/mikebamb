<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.gohan.mikebamb.login.presenter.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerShipFragment"
            app:destination="@id/registerShipFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerShipFragment"
        android:name="com.gohan.mikebamb.login.presenter.RegisterShipFragment"
        android:label="fragment_register_ship"
        tools:layout="@layout/fragment_register_ship">
        <action
            android:id="@+id/action_registerShipFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>